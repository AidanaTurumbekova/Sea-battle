import random

print("Welcome to Battleship!")
player_name = input("Enter your name: ")
print(f"Hello, {player_name}! Let's start!")

ROWS, COLS = 7, 7
battlefield = [["~"] * COLS for _ in range(ROWS)]

def place_ship(count=5):
     for _ in range(count):
        x, y = random.randint(0, ROWS - 1), random.randint(0, COLS - 1)
        while battlefield[x][y] == "S":
            x, y = random.randint(0, ROWS - 1), random.randint(0, COLS - 1)
        battlefield[x][y] = "S"

try:
    x, y = map(int, input("Enter your shot as two numbers (row and column) separated by a space: ").split())
    
    if 0 <= x < ROWS and 0 <= y < COLS: 
        if battlefield[x][y] == "S":
            print("Hit!")
            battlefield[x][y] = "X"
        elif battlefield[x][y] == "~":
            print("Miss.")
            battlefield[x][y] = "M"
        else:
            print("You already shot here!")
    else:
        print("Invalid coordinates. Please enter numbers between 0 and 6.")
except ValueError:
    print("Invalid input. Please enter two numbers separated by a space.")

for row in battlefield:
    print(" | ".join(row))





